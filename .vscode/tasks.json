{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
	"command": "yarn",
  "isBackground": true,
  "tasks": [
		{
			"label": "compile:server",
			"type": "shell",
			"args": [
				"compile:server"
			],
			"problemMatcher": [],
			"group": {
				"_id": "build",
				"isDefault": false
			}
		},
		{
			"label": "TypeScript: Run type-checker",
			"type": "shell",
			"command": "${workspaceRoot}/node_modules/.bin/tsc",
			"args": [
				"-w",
				"-p",
				".",
				"--noEmit"
			],
			"isBackground": true,
			"problemMatcher": "$tsc-watch"
		},
		{
			"label": "TSLint: Lint all files",
			"type": "shell",
			"args": [
				"lint"
			],
			"problemMatcher": {
				"owner": "tslint",
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"severity": "warning",
				"pattern": {
					"regexp": "^(\\S.*)\\[(\\d+), (\\d+)\\]:\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"message": 4
				}
			}
		}
	]
}
