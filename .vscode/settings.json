{
  "files.exclude": {
    ".git/": true,
    ".awcache/": true,
    "node_modules/": false,
    "dist/": false,
    "externals/": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "[json]": {
    "editor.formatOnSave": false
  },
  "tslint.autoFixOnSave": true,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "cSpell.words": [
    "Fillwidth",
    "Lifecycle",
    "Mastercard",
    "Refetch",
    "Stackable",
    "Styleguide",
    "Truthy",
    "Validators",
    "Waypoint",
    "inquireable",
    "semibold",
    "signup",
    "xlarge",
    "xsmall",
    "xxsmall",
    "zucconi"
  ],
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/**",
    ".vscode",
    "typings",
    "**/*.snap",
    "**/*.story.tsx"
  ],
  "debug.node.autoAttach": "on"
}
