{
  "presets": ["es2015", "stage-3", "react"],
  "plugins": [
    ["relay", { "schema": "data/schema.graphql" }],
    [
      "styled-components",
      {
        "ssr": true,
        "displayName": true,
        "minify": true,
        "transpileTemplateLiterals": true
        // "preprocess": true // still experimental
      }
    ]
  ],
  "env": {
    "test": {
      "plugins": [
        [
          "styled-components",
          {
            "ssr": true
          }
        ]
      ]
    }
  }
}
